    /* Altura máxima razonable para que no tape todo en pantallas grandes */
    max-height: 65vh;           /* ←olve el problema 2 */
    min-height: 280px;          /* evita que sea muy pequeño en móvil */
  }

  .video-inner {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;     /* mantiene 16:9 */
  }
  .video-inner iframe {
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* ====================== ESPACIO INICIAL ====================== */
  .spacer {
    /* En móvil: poco espacio, en PC grande: más espacio */
    height: 15vh;               /* valor base */
  }

  /* ====================== CONTENIDO ====================== */
  .dialogue-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
    position: relative;
    z-index: 1;
  }

  .line {
    background: #ffffff;
    padding: 20px;
